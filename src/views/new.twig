<html>
  <head>
    <title>Guest Access</title>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <style>
:root {
  /* background colors */
  --bg-surface: #ffffff;
  --bg-surface-low: #f0f1f2;
  --bg-surface-border: hsl(206deg 11% 87%);
  --bg-surface-hover: #f0f0f0;
  --bg-surface-active: #ebebeb;
  --bg-surface-scroll-track: transparent;
  --bg-surface-scroll-thumb: #0000001e;

  --bg-world-overlay: rgba(0 0 0 / 50%);
  --bg-world-hover: rgba(0 0 0 / 20%);
  --bg-world-active: rgba(0 0 0 / 30%);
  --bg-world-border: #ffffff;

  --bg-primary: hsl(209deg 93% 53%);
  --bg-primary-hover: hsl(209deg 93% 45%);
  --bg-primary-active: hsl(209deg 93% 40%);
  --bg-primary-soft-hover: hsl(209deg 93% 53% / 6%);
  --bg-primary-soft-active: hsl(209deg 93% 53% / 16%);

  --bg-secondary: hsl(163deg 87% 40%);
  --bg-secondary-hover: hsl(163deg 87% 35%);
  --bg-secondary-active: hsl(163deg 87% 30%);
  --bg-secondary-soft-hover: hsl(163deg 87% 35% / 6%);
  --bg-secondary-soft-active: hsl(163deg 87% 30% / 16%);

  --bg-danger: hsl(2deg 100% 67%);
  --bg-danger-hover: hsl(2deg 100% 62%);
  --bg-danger-active: hsl(2deg 100% 55%);
  --bg-danger-soft-hover: hsl(2deg 100% 62% / 6%);
  --bg-danger-soft-active: hsl(2deg 100% 55% / 16%);

  --bg-tooltip: black;

  /* text colors */
  --tc-surface: #0b1014;
  --tc-surface-low: #717577;
  --tc-world: #ffffff;
  --tc-primary: var(--bg-primary);
  --tc-on-primary: #ffffff;
  --tc-secondary: var(--bg-secondary);
  --tc-on-secondary: #ffffff;
  --tc-danger: var(--bg-danger);
  --tc-on-danger: #ffffff;
  --tc-tooltip: white;
  --tc-link: hsl(213deg 76% 56%);

  /* icon color */
  --ic-surface: hsl(0deg 0% 12%);
  --ic-surface-low: #717577;
  --ic-world: #ffffff;
  --ic-primary: var(--bg-primary);
  --ic-on-primary: #ffffff;
  --ic-secondary: var(--bg-secondary);
  --ic-on-secondary: #ffffff;
  --ic-danger: var(--bg-danger);
  --ic-on-danger: #ffffff;
  --ic-tooltip: #ffffff;
  --ic-link: hsl(213deg 76% 56%);

  /* spacing */
  --sp-xl: 40px;
  --sp-lg: 30px;
  --sp-md: 20px;
  --sp-sm: 15px;
  --sp-xs: 10px;
  --sp-xxs: 5px;

  /* icon sizes */
  --ic-xl: 40px;
  --ic-lg: 30px;
  --ic-md: 20px;
  --ic-sm: 15px;
  --ic-xs: 10px;

  /* avatar sizes */
  --av-xl: 70px;
  --av-lg: 50px;
  --av-md: 40px;
  --av-sm: 30px;
  --av-xs: 25px;
  --av-xxs: 20px;

  /* thumbnail sizes */
  --th-md: 200px;
  --th-sm: 150px;

  /* border radius */
  --br-lg: 16px;
  --br-md: 12px;
  --br-sm: 10px;
  --br-xs: 8px;
  --br-xxs: 4px;

  /* font sizes */
  --fs-h2: 24px;
  --fs-s1: 20px;
  --fs-s2: 18px;
  --fs-b1: 16px;
  --fs-b2: 14px;
  --fs-b3: 12px;

  /* line heights */
  --lh-h2: 28px;
  --lh-s1: 24px;
  --lh-s2: 22px;
  --lh-b1: 24px;
  --lh-b2: 20px;
  --lh-b3: 18px;

  /* letter spacing */
  --ls-h2: 0;
  --ls-s1: 0;
  --ls-s2: 0;
  --ls-b1: 0;
  --ls-b2: 0;
  --ls-b3: 0;

  /* font weights */
  --fw-bold: 700;
  --fw-semi-bold: 600;
  --fw-medium: 500;
  --fw-regular: 400;
  --fw-light: 300;

  /* box shadow */
  --bs-surface-border: inset 0 0 0 1px var(--bg-surface-border);
  --bs-primary-border: inset 0 0 0 1px var(--bg-primary);
  --bs-secondary-border: inset 0 0 0 1px var(--bg-secondary);
  --bs-danger-border: inset 0 0 0 1px var(--bg-danger);

  --bs-surface: 0 0 2px 0 hsl(0deg 0% 0% / 20%);
  --bs-dropdown: 0 1px 4px 0 hsl(0deg 0% 0% / 20%);
  --bs-modal: 0 2px 6px 0 hsl(0deg 0% 0% / 20%);
  --bs-dialog: 0 3px 8px 0 hsl(0deg 0% 0% / 20%);

  --z-modal: 100;
  --z-dialog: 200;

  /* outline */
  --focus-outline: var(--tc-surface) solid 2px;
  --focus-outline-offset: -2px;
}
    </style>
    <style>
@import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap");

body {
    padding: var(--sp-md);
    font-family: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif !important;
    background-color: var(--bg-surface-low);
    color: var(--tc-surface);
}

body label {
    color: var(--tc-surface-low);
    font-size: var(--fs-b3);
    line-height: var(--lh-b3);
    letter-spacing: var(--ls-b3);
    font-weight: var(--fw-bold);
}

*:focus {
    outline: var(--focus-outline);
    outline-offset: var(--focus-outline-offset);
}
a {
    color: var(--tc-link);
}
a:hover,
a:focus,
a:active {
    color: var(--tc-link) !important;
}

body form {
    margin: 0 auto;
    padding: var(--sp-lg);
    max-width: 450px;
    box-shadow: none;
    border: none;
    border-radius: var(--br-md);
    background-color: var(--bg-surface);
}

.text-s1 {
    font-weight: var(--fw-semi-bold);
    font-size: var(--fs-s1);
    letter-spacing: var(--ls-s1);
    line-height: var(--lh-s1);
}

.text-b2 {
    font-size: var(--fs-b2);
    letter-spacing: var(--ls-b2);
    line-height: var(--lh-b2);
}

.heading {
    margin: 0 0 var(--sp-lg)
}
.continue-alert {
    margin: 0 0 var(--sp-md);
}

input {
    height: 40px;
    padding: 0 var(--sp-xs);
    margin-top: var(--sp-xs);
    border-radius: var(--br-sm);
    background-color: var(--bg-surface-low);
    border: none;
    
    font-size: var(--fs-b2);
    letter-spacing: var(--ls-b2);
    line-height: var(--lh-b2);
}
input[type="submit"] {
    padding: 0 var(--sp-md);
    height: 48px;
    font-weight: var(--fw-semi-bold);
    font-size: var(--fs-b2);
    line-height: var(--lh-b2);
    letter-spacing: var(--ls-b2);
}

.btn-primary {
    background-color: var(--bg-primary);
    color: var(--tc-on-primary);
}
.btn-default {
    background-color: transparent;
    box-shadow: var(--bs-primary-border);
    background-image: unset;
    color: var(--tc-primary);
}
.btn-default:not(:first-child) {
    margin: 0 var(--sp-xs);
}
    </style>
  </head>
  <body>
    <form method="POST">
      <h2 class="heading text-s1">Confirm Captcha</h2>
      <div class="g-recaptcha" data-sitekey="{{ recaptchaSiteKey }}"></div>
      <p class="text-b2 continue-alert">Continuing will create a guest user that is stored as a cookie for the duration of your browser session.</p>
      <br/>
      <input type="submit" name="approved" value="Continue" class="btn-primary">
      <input type="submit" name="cancelled" value="Cancel" class="btn-default">
    </form>
  </body>
</html>